<% if @requests.present? %>
  <ul class="list-group">
    <% @requests.each do |request| %>
      <li class="list-group-item">
        <h5><%= link_to request.offer.headline, offer_request_path(request.offer, request) %></h5>
        <% if request.offer.closed %>
          <span class="badge badge-info">Closed offer</span>
        <% end %>
        <% if request.completed_requestor %>
          <span class="badge badge-warning">New activity</span>
        <% end %>
        <% if request.offer.user.city %>
          <div><%= request.offer.user.city %>, <%= request.offer.user.state %></div>
        <% end %>
        <div class="small grey-text">requested <%= time_ago(request) %> ago</div>
      </li>
    <% end %>
  </ul>
<% else %>
  <h5>No open requests</h5>
<% end %>
