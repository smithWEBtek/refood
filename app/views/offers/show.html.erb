<%= render 'layouts/flash_error' %>

<h1><%= @offer.headline %></h1>
<h4><%= @offer.description %></h4>

<div class="text-grey left-padding">
  <div><b>Availability: </b><%= @offer.availability %></div>
  <div><b>Time left: </b><%= time_left(@offer) %></div>
  <div><b>Fulfilled: </b><%= @offer.fulfilled ? "yes" : "no" %></div>
  <div><b>Contact: </b><%= @offer.giver.user.name %></div>
</div>

<% if @offer.user == current_user %>
  <%= button_to "Edit offer", edit_offer_path(@offer), class: "btn btn-primary", method: "get" %>

  <%= button_to "Delete offer", offer_path(@offer),method: "delete", class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this offer?"} %>
<% elsif has_request(current_user, @offer) %>
  <br>
   <%= link_to "View your request for this item", offer_request_path(@offer, @request) %>
<% else %>
  <%= button_to "Make request", new_offer_request_path(@offer), method: "get", class: "btn btn-success" %>
<% end %>
