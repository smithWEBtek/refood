<%= render 'layouts/flash_message' %>

<h1 class="slab-font sm-margin-bottom">Closed Offers</h1>

<% if @offers.present? %>
  <ul class="list-group">
    <% @offers.each do |offer| %>
      <li class="list-group-item">
        <h4><%= link_to offer.headline, offer_path(offer) %></h4>
        <div class="small">Posted <%= format_date(offer.created_at.localtime) %></div
      </li>
    <% end %>
  </ul>

<% else %>
  <br>
  <h5>Currently no closed offers</h5>
<% end %>

<br>
<%= link_to "Back to index", '/index' %>
