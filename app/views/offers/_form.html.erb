<%= form_for @offer do |f| %>
  <div class="form-group">
    <%= f.label :headline %>
    <%= f.text_field :headline, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Describe the extra food you have (details, quantity, etc.)", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :availability %>
    <%= f.text_area :availability, placeholder: "Describe your availability for exchanging the food", class: 'form-control' %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Cancel", '/index', class: "btn btn-secondary" %>
<% end %>