<h1 class="slab-font"><%= @offer.closed ? "Closed" : "Open" %> Offer</h1>

<% if params[:offer_id] %>
  <h3><%= link_to @offer.headline, offer_path(@offer) %></h3>
<% else %>
  <h3><%= @offer.headline %></h3>
<% end %>
<div class="small grey-text">Posted on <%= format_date(@offer.created_at.localtime) %></div>
