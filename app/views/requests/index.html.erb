<%= render 'layouts/flash_message' %>

<h1 class="slab-font sm-margin-bottom">Open requests for:</h1>
<h3><%= link_to @offer.headline, offer_path(@offer) %></h3>
<div class="small grey-text">Posted on <%= format_date(@offer.created_at.localtime) %></div>

<br>
<% if @requests.present? %>
  <%= render 'request_list_items' %>

<% else %>
  <h5>No open requests</h5>
<% end %>

<br>
<h4 class="slab-font"><%= link_to "Completed requests", offer_completed_path %></h4>
<div class="slab-font"><%= link_to "Back to index", '/index' %></div>
