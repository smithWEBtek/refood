<%= render 'layouts/flash_message' %>

<%= render 'offers/headline' %>

<br>
<% if @requests.present? %>
  <% @requests.each do |req| %>
    <%= render 'display_request', :req => req %>
  <% end %>
<% else %>
  <br>
  <h5>No completed requests</h5>
<% end %>

<br>
<h4 class="slab-font"><%= link_to "Open Requests", offer_requests_path(@offer) %></h4>
<div class="slab-font"><%= link_to "Back to index", '/index' %></div>
