<%= render 'layouts/flash_error' %>

<h1>Make a Request</h1>
<h3><%= link_to @offer.headline, offer_path(@offer) %></h3>
<h6>Pick up by: <%= format_date(@offer.expiration) %></h6>
<h6>From: <%= @offer.giver.user.name %></h6>

<br>

<%= form_tag "/offers/#{@offer.id}/requests" do %>
  <div class="form-group">
    <%= text_area_tag 'request[message]', '', class: 'form-control', placeholder: 'Provide a message about when you can pick up or ask a question' %>
  </div>

  <p>Contact me at (at least one is required):</p>
  <div class='form-group'>
    <%= label_tag :email %>
    <%= text_field_tag 'request[receiver_email]', current_user.email, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= label_tag :phone %>
    <%= text_field_tag 'request[receiver_phone]', current_user.phone, class: 'form-control' %>
  </div>
  <%= hidden_field_tag :offer_id %>
  <%= submit_tag "Submit request", class: "btn btn-primary" %>
<% end %>
