<%= form_for @user, url: signup_path, class: "was-validated" do |f| %>
  <div class="form-group">
    <%= f.label :name, "Display name", class: "control-label" %>
    <%= f.text_field :name,  class: "form-control " %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "control-label" %>
    <%= f.password_field :password, class: "form-control" %>
    <small id="emailHelp" class="form-text text-muted">Please choose a memorable password, as there's no way to change or recover it later</small>
  </div>
  <div class="form-group password">
    <%= f.label :password_confirmation, class: "control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <%= f.submit "Sign me up!", class: "btn btn-primary" %>
  <%= link_to "Or log in", login_path %>
<% end %>

