<%= form_for @user, url: signup_path, class: "was-validated" do |f| %>
  <div class="form-group">
    <%= f.label :name, "* Display name", class: "control-label" %>
    <%= f.text_field :name, class: "form-control", autofocus: true %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-8">
      <%= f.label :city, "* City" %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :state, "* State" %>
      <%= f.select :state, us_states, {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "* Email" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "* Password", class: "control-label" %>
    <%= f.password_field :password, class: "form-control" %>
    <small id="emailHelp" class="form-text text-muted">Please choose a memorable password, as there's no way to change or recover it later</small>
  </div>
  <div class="form-group password">
    <%= f.label :password_confirmation, "* Confirm password", class: "control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <%= f.submit "Sign me up!", class: "btn btn-primary" %>
<% end %>
