<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
    <div class="form-group">
    <%= f.text_field :name,  class: "form-control", placeholder: "Display name" %>
  </div>
    <div class="form-group">
    <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
  </div>
  <div class="form-group">
    <%= f.text_field :address2, class: "form-control", placeholder: "Address Line 2" %>
  </div>
  <div class="form-group">
    <%= f.text_field :city, class: "form-control", placeholder: "City" %>
  </div>
  <div>
    <%= f.select :state, us_states %>
  </div>
  <div class="form-group">
    <%= f.text_field :zip_code, class: "form-control", placeholder: "Zip code" %>
  </div>
  <div class="form-group">
    <%= f.text_field :phone, class: "form-control", placeholder: "Phone number" %>
  </div>
  </div>
  <%= f.submit "Update profile", class: "btn btn-primary" %>
<% end %>
