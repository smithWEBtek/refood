<%= render 'layouts/flash_error' %>

<h1 class="slab-font sm-margin-bottom">Log In</h1>

<%= form_tag @session do %>
  <div class="form-group">
    <%= label_tag :email, "Email address" %>
    <%= text_field_tag :email, "", class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>
  <%= submit_tag "Go!", class: "btn btn-primary" %>
<% end %>
<br>

<div class="slab-font">No account?</div>
<%= link_to "Sign up with your email", signup_path %>
<br>
<%= link_to "Or log in with Google", "/auth/google_oauth2" %>
